# Configuration MediDesk - Installation Locale
# Copiez ce fichier vers .env et personnalisez les valeurs

# === BASE DE DONNÉES ===
DB_NAME=medidesk
DB_USER=medidesk_user
# ⚠️ IMPORTANT: Changez ce mot de passe en production !
DB_PASSWORD=changeme_secure_password_here
DB_PORT=5432

# === BACKEND API ===
BACKEND_PORT=5000
FLASK_ENV=production
# ⚠️ IMPORTANT: Générez une clé secrète sécurisée (min. 32 caractères)
SECRET_KEY=changeme_secret_key_minimum_32_chars_random

# === FRONTEND WEB ===
FRONTEND_PORT=8080
CORS_ORIGINS=http://localhost:8080,http://localhost

# === CENTRE DE SOINS (Personnalisation) ===
CENTER_NAME=Mon Cabinet de Kinésithérapie
CENTER_ADDRESS=123 Rue de la Santé, 75000 Paris
CENTER_PHONE=01 23 45 67 89
CENTER_EMAIL=contact@mon-cabinet.fr

# === SÉCURITÉ ===
# Activer HTTPS (recommandé en production)
ENABLE_HTTPS=false
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem

# === BACKUP ===
# Activer les sauvegardes automatiques
AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *  # Tous les jours à 2h du matin
BACKUP_RETENTION_DAYS=30
